<h1>Login!</h1><br>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag(sessions_path) do %>
  <%= label_tag :name, "Username:" %>
  <%= text_field_tag :name, nil, :placeholder => "Login with username" %><br>

  <%= label_tag :password, "Password" %>
  <%= text_field_tag :password, nil, :placeholder => "Password" %><br>

  <%= submit_tag "Login" %>
<% end %>
<br>
<br>
<h2><%= link_to "Sign Up!", new_user_path %></h2>
