<h1>New User</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

<% end %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.text_field :password %><br>

  <%= f.collection_radio_buttons :cohort_id, Cohort.all, :id, :name %>

  <%= f.submit %>

<% end %>
<br>
<h3><%= link_to "Login", login_path %></h3>
